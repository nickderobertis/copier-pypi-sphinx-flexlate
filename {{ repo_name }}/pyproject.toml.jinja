[tool.poetry]
name = "{{ package_name }}"
version = "1.0.0"
description = "{{ short_description }}"
authors = ["{{ package_author }} <{{ author_email }}>"]
readme = "README.md"
packages = [{include = "{{ package_directory }}"}]
license = "MIT"
classifiers = [
    # How mature is this project? Common values are
    #   3 - Alpha
    #   4 - Beta
    #   5 - Production/Stable
    "Development Status :: 3 - Alpha",
    # Indicate who your project is intended for
    "Intended Audience :: Developers",
    # List supported python versions
    "Programming Language :: Python :: 3.7",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
]

[tool.poetry.urls]
repository = "https://github.com/{{ repo_username }}/{{ repo_name }}"
documentation = "https://{{ repo_username }}.github.io/{{ repo_name }}"

[tool.poetry.dependencies]
python = ">=3.7"

[tool.poetry.group.test.dependencies]
pytest = "*"
pytest-cov = "*"

[tool.black]
include = '{{ package_directory }}.*\.pyi?$|tests.*\.pyi?$'

[tool.isort]
profile = "black"
skip = ['.bzr', '.direnv', '.eggs', '.git', '.hg', '.mypy_cache', '.pants.d', '.svn', '.tox', '.venv', '__pypackages__', '_build', 'buck-out', 'build', 'dist', 'node_modules', '.venvs']